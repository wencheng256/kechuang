<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators SYSTEM "http://struts.apache.org/dtds/xwork-validator-1.0.dtd" >
<validators>
	<field name="title">
		<field-validator type="requiredstring">
			<param name="trim">true</param>  
			<message>标题不能为空</message>
		</field-validator>
	</field>
		<field name="content">
		<field-validator type="requiredstring">
			<param name="trim">true</param>  
			<message>内容不能为空</message>
		</field-validator>
	</field>
</validators>
